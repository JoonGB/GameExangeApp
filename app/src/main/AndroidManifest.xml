<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="gameexange.com.gameexangeapp">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />

    <uses-feature
        android:name="android.hardware.camera"
        android:required="true" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.NoActionBar">
        <activity android:name=".controllers.activitites.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity" />
        <activity android:name=".controllers.activitites.ProductoListActivity" />
        <activity android:name=".controllers.activitites.ProductoDetalleActivity" />
        <activity android:name=".controllers.activitites.RegistroActivity" />
        <activity android:name=".controllers.activitites.CrearProductoActivity" />
        <activity
            android:name=".controllers.activitites.VideojuegoListActivity"
            android:label="@string/title_activity_videojuego_list"
            android:theme="@style/Theme.AppCompat.NoActionBar" />
        <activity android:name=".controllers.activitites.BusquedaVideojuego" />
        <activity
            android:name=".FiltrosBusquedaProducto"
            android:label="@string/title_activity_filtros_busqueda_producto"
            android:theme="@style/Theme.AppCompat.NoActionBar" />
        <activity android:name=".FiltrosBusquedaProductos"></activity>
    </application>

</manifest>