<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp">
        <LinearLayout
            android:orientation="vertical"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_margin="10dp">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_height="wrap_content"
                android:layout_width="match_parent">

                <ImageView
                    android:id="@+id/foto_usuario"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    app:srcCompat="@mipmap/ic_launcher" />

                <TextView
                    android:id="@+id/usuario"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Usuario"
                    android:gravity="center_vertical"
                    android:textColor="@color/colorPrimary"
                    android:layout_marginLeft="10dp"
                    android:textSize="25dp"/>
            </LinearLayout>

            <android.support.v4.view.ViewPager xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/pager"
                android:layout_width="match_parent"
                android:layout_height="166dp"></android.support.v4.view.ViewPager>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_height="wrap_content"
                android:layout_width="match_parent">
                <TextView
                    android:id="@+id/nombre"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Producto"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="25dp"/>

                <TextView
                    android:id="@+id/precio"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text="0,00 â‚¬"
                    android:textColor="@color/colorPrimary"
                    android:textSize="25dp" />
            </LinearLayout>
            <TextView
                android:id="@+id/descripcion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Nunc lacinia sit amet purus eget scelerisque. Donec mollis consequat dui id finibus. Curabitur dictum ante ante, in luctus enim bibendum in. Morbi laoreet justo eget libero suscipit molestie. Vivamus congue feugiat nisi, id dapibus tellus semper rhoncus."
                android:textColor="@color/colorPrimary"
                android:textSize="20dp" />
            <TextView
                android:id="@+id/fecha"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="06/05/2017"
                android:textColor="@color/colorGrayDark"
                android:textSize="25dp"/>
            <TextView
                android:id="@+id/videojuego"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="PLAYERUNKNOWN'S BATTLEGROUND"
                android:textColor="@color/colorGrayLight"
                android:textSize="20dp"/>
        </LinearLayout>
</LinearLayout>
</ScrollView>